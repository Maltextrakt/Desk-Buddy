<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/current_setting"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Profile Name"
        app:layout_constraintBottom_toTopOf="@+id/temp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/temp_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="42dp"
        android:text="tempButton"

        app:layout_constraintBottom_toTopOf="@+id/light_button"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

    <Button
        android:id="@+id/light_button"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="350dp"
        android:text="lightButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_view" />

    <Button
        android:id="@+id/hum_button"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="180dp"
        android:text="humButton"
        app:layout_constraintBottom_toTopOf="@+id/profilesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/light_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/profilesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profiles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/temp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="78dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/light_button"
        app:layout_constraintEnd_toEndOf="@+id/temp_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/light_button"
        app:layout_constraintEnd_toEndOf="@+id/temp_view"
        app:layout_constraintStart_toStartOf="@+id/temp_view"
        app:layout_constraintTop_toTopOf="@+id/light_button" />

    <TextView
        android:id="@+id/hum_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/hum_button"
        app:layout_constraintEnd_toEndOf="@+id/light_view"
        app:layout_constraintStart_toStartOf="@+id/light_view"
        app:layout_constraintTop_toBottomOf="@+id/light_button" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="179dp"
        android:layout_height="62dp"
        android:layout_marginBottom="112dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!--
    Part of the dropdown menu (might not be used in the app)
    <Spinner
        android:id="@+id/spinner_settings_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>